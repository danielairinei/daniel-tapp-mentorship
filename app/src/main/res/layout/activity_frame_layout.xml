<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_forgot_password_gradient_selector">

    <TextView
        android:id="@+id/forgot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:layout_marginTop="200dp"
        android:fontFamily="@font/bahnschrift_medium"
        android:text="@string/forgot_password_title_text_view"
        android:textColor="#AFAFAF"
        android:textSize="24sp"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/userInput"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#30ffffff"
        android:hint="@string/forgot_password_hint_edit_text"
        android:fontFamily="@font/bahnschrift_medium"
        android:gravity="center"
        android:autofillHints=""
        android:padding="20dp"
        android:textSize="18sp"
        android:inputType="text" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/changePass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="200dp"
        android:layout_gravity="bottom|center"
        android:backgroundTint="#C5B2B2"
        android:fontFamily="@font/bahnschrift_medium"
        android:padding="5dp"
        android:text="@string/submit_mat_btn" />
</FrameLayout>
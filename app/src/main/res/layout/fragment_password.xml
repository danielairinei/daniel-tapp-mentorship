<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_image_demo_fragment">

    <TextView
        android:id="@+id/yourPasswordTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="248dp"
        android:fontFamily="@font/josefin_sans_medium"
        android:text="@string/fragment_password_your_password_text_view"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/passwordTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/josefin_sans_bold"
        android:text="@string/fragment_password_password_placeholder_text_view"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/yourPasswordTV" />

    <EditText
        android:id="@+id/changePasswordEt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:background="@drawable/et_demo_fragment_shape"
        android:fontFamily="@font/josefin_sans_medium"
        android:hint="@string/password_change_password_edit_text"
        android:inputType="textPassword"
        android:padding="8dp"
        android:textColor="@color/fragment_login_edit_text_text_color"
        android:textSize="@dimen/change_password_edit_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/passwordTV"
        tools:ignore="Autofill,SpUsage" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/submitNewPasswordBtn"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="52dp"
        android:backgroundTint="@color/fragment_login_edit_text_text_color"
        android:fontFamily="@font/josefin_sans_medium"
        android:text="@string/password_submit_mat_button"
        android:textSize="@dimen/change_password_edit_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/changePasswordEt" />

</androidx.constraintlayout.widget.ConstraintLayout>